<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.CustomerSettings.Setting"
        android:weightSum="2.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:weightSum="2.0"
            android:gravity="center"
            android:background="@drawable/banner_radius"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/topimagewidth"
                    android:layout_height="@dimen/topimagewidth"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:weightSum="2.0"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/caledar"
                        style="@style/headertextview"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center">



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4.0">

                    <LinearLayout
                        android:id="@+id/mPrevMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/mSelectedMonthName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="May 2015"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textsizemedium"
                            style="@style/OpenSans_Semibold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7">

                    </LinearLayout>

                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Sun"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Mon"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Tue"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Wed"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Thu"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Fri"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/sundaybgcolor"
                        android:gravity="center"
                        android:text="Sat"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        style="@style/OpenSans_Semibold" />

                </TableRow>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/mGvCalendar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="7"
                        android:padding="1dp"
                        android:visibility="visible"
                        android:stretchMode="columnWidth"
                        android:textAlignment="gravity">
                    </GridView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/AL_ll_home_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@color/overdue"></LinearLayout>

                        <TextView
                            android:id="@+id/AL_txt_cal_text_leave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Pending"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsizesmall"
                            android:layout_marginLeft="10dp"
                            android:typeface="sans" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/today"
                            android:layout_gravity="center">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/AL_txt_cal_text_absent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Today"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsizesmall"
                            android:layout_marginLeft="10dp"
                            android:typeface="sans" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/future"
                            android:layout_gravity="center">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/AL_txt_cal_text_absent1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Planned"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsizesmall"
                            android:layout_marginLeft="10dp"
                            android:typeface="sans" />

                    </LinearLayout>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:weightSum="3.0"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/OpenSans_Semibold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_13sdp"
                                android:text="Referrer name"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/OpenSans_Semibold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_13sdp"
                                android:text="Location"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">


                            <TextView
                                style="@style/OpenSans_Semibold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_13sdp"
                                android:text="Activity Type"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/mtodayAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nolead"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_14sdp"
                            style="@style/OpenSans_Regular"
                            android:visibility="gone"
                            android:textColor="@color/sundaybgcolor"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingTop="@dimen/_5sdp"
                            android:id="@+id/mLeadList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>