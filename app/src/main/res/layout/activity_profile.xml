<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1.8"
            android:background="@drawable/banner_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/mBack"
                android:layout_width="@dimen/topimagewidth"
                android:layout_height="@dimen/topimagewidth"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                style="@style/headertextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/profile"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_edittext"
            app:cardCornerRadius="@dimen/_40sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mUserImage">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:srcCompat="@drawable/profile_image_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="2dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    card_view:cardCornerRadius="@dimen/_60sdp"
                    card_view:layout_constraintBottom_toTopOf="@+id/imageView11"
                    card_view:layout_constraintEnd_toEndOf="@+id/cardView6"
                    card_view:layout_constraintStart_toStartOf="@+id/cardView6"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="2dp"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    card_view:cardCornerRadius="@dimen/_60sdp"
                    card_view:layout_constraintBottom_toTopOf="@+id/imageView10"
                    card_view:layout_constraintEnd_toEndOf="@+id/cardView5"
                    card_view:layout_constraintStart_toStartOf="@+id/cardView5"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView9" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="2dp"
                    android:layout_height="@dimen/_50sdp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    card_view:cardCornerRadius="@dimen/_60sdp"
                    card_view:layout_constraintBottom_toTopOf="@+id/imageView9"
                    card_view:layout_constraintEnd_toEndOf="@+id/cardView4"
                    card_view:layout_constraintStart_toStartOf="@+id/cardView4"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView8" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="32dp"
                    card_view:layout_constraintStart_toStartOf="@+id/imageView10"
                    card_view:layout_constraintTop_toBottomOf="@+id/mworkemail"
                    card_view:srcCompat="@drawable/phone" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="32dp"
                    card_view:layout_constraintStart_toStartOf="@+id/imageView9"
                    card_view:layout_constraintTop_toBottomOf="@+id/mdepartment"
                    card_view:srcCompat="@drawable/email_icon" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="32dp"
                    card_view:layout_constraintEnd_toEndOf="@+id/imageView8"
                    card_view:layout_constraintStart_toStartOf="@+id/imageView8"
                    card_view:layout_constraintTop_toBottomOf="@+id/mjobposition"
                    card_view:srcCompat="@drawable/department_icon" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="32dp"
                    card_view:layout_constraintEnd_toEndOf="@+id/imageView6"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/mUserName"
                    card_view:srcCompat="@drawable/job_" />

                <TextView
                    android:id="@+id/textView17"
                    style="@style/profile_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/full_name"
                    card_view:layout_constraintBottom_toBottomOf="@+id/imageView6"
                    card_view:layout_constraintStart_toEndOf="@+id/imageView6"
                    card_view:layout_constraintTop_toTopOf="@+id/imageView6" />

                <TextView
                    android:id="@+id/mmobile"
                    style="@style/profile_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    card_view:layout_constraintStart_toStartOf="@+id/textView7"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/profile_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Position"
                    card_view:layout_constraintBottom_toBottomOf="@+id/imageView8"
                    card_view:layout_constraintStart_toStartOf="@+id/textView17"
                    card_view:layout_constraintTop_toTopOf="@+id/imageView8" />

                <TextView
                    android:id="@+id/mUserName"
                    style="@style/profile_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    card_view:layout_constraintStart_toStartOf="@+id/textView17"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView17" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/profile_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departmant"
                    card_view:layout_constraintBottom_toBottomOf="@+id/imageView9"
                    card_view:layout_constraintStart_toStartOf="@+id/textView11"
                    card_view:layout_constraintTop_toTopOf="@+id/imageView9" />

                <TextView
                    android:id="@+id/mworkemail"
                    style="@style/profile_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    card_view:layout_constraintStart_toStartOf="@+id/mdepartment"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/textView15"
                    style="@style/profile_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Mail"
                    card_view:layout_constraintBottom_toBottomOf="@+id/imageView10"
                    card_view:layout_constraintStart_toStartOf="@+id/textView13"
                    card_view:layout_constraintTop_toTopOf="@+id/imageView10" />

                <TextView
                    android:id="@+id/mjobposition"
                    style="@style/profile_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    card_view:layout_constraintStart_toStartOf="@+id/textView11"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView11" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/profile_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    card_view:layout_constraintBottom_toBottomOf="@+id/imageView11"
                    card_view:layout_constraintStart_toStartOf="@+id/textView15"
                    card_view:layout_constraintTop_toTopOf="@+id/imageView11" />

                <TextView
                    android:id="@+id/mdepartment"
                    style="@style/profile_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    card_view:layout_constraintStart_toStartOf="@+id/textView13"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView13" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:srcCompat="@drawable/profile_icon" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="2dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="21dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="@dimen/_60sdp"
                    card_view:layout_constraintBottom_toTopOf="@+id/imageView8"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView6">

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:srcCompat="@drawable/profile_image_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mUserImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:clickable="true"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/applogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            card_view:civ_border_color="@color/colorPrimary"
            card_view:civ_border_width="2dp"
            card_view:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>